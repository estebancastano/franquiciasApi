{
  "info": {
    "name": "Franquicias API",
    "_postman_id": "b2e3f6a7-c4d5-4987-bb92-52f123456789",
    "description": "Colección actualizada de endpoints para la API de Franquicias, Sucursales y Productos desarrollada en Spring Boot con MongoDB.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1️⃣ Crear Franquicia",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Franquicia Principal\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/franquicias",
          "host": ["{{baseUrl}}"],
          "path": ["api", "franquicias"]
        }
      }
    },
    {
      "name": "2️⃣ Actualizar Nombre de Franquicia",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nuevoNombre\": \"Franquicia Internacional\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/franquicias/{{franquiciaId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "franquicias", "{{franquiciaId}}"]
        }
      }
    },
    {
      "name": "3️⃣ Crear Sucursal para Franquicia",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Sucursal Norte\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/franquicias/{{franquiciaId}}/sucursales",
          "host": ["{{baseUrl}}"],
          "path": ["api", "franquicias", "{{franquiciaId}}", "sucursales"]
        }
      }
    },
    {
      "name": "4️⃣ Actualizar Nombre de Sucursal",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Sucursal Central\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/franquicias/{{franquiciaId}}/sucursales/{{sucursalId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "franquicias", "{{franquiciaId}}", "sucursales", "{{sucursalId}}"]
        }
      }
    },
    {
      "name": "5️⃣ Crear Producto en Sucursal",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Laptop Lenovo\",\n  \"stock\": 50\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/franquicias/{{franquiciaId}}/sucursales/{{sucursalId}}/productos",
          "host": ["{{baseUrl}}"],
          "path": [
            "api",
            "franquicias",
            "{{franquiciaId}}",
            "sucursales",
            "{{sucursalId}}",
            "productos"
          ]
        }
      }
    },
    {
      "name": "6️⃣ Actualizar Nombre de Producto",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nuevoNombre\": \"Laptop HP EliteBook\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/franquicias/{{franquiciaId}}/sucursales/{{sucursalId}}/productos/{{productoId}}",
          "host": ["{{baseUrl}}"],
          "path": [
            "api",
            "franquicias",
            "{{franquiciaId}}",
            "sucursales",
            "{{sucursalId}}",
            "productos",
            "{{productoId}}"
          ]
        }
      }
    },
    {
      "name": "7️⃣ Actualizar Stock de Producto",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nuevoStock\": 120\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/franquicias/{{franquiciaId}}/sucursales/{{sucursalId}}/productos/{{productoId}}/stock",
          "host": ["{{baseUrl}}"],
          "path": [
            "api",
            "franquicias",
            "{{franquiciaId}}",
            "sucursales",
            "{{sucursalId}}",
            "productos",
            "{{productoId}}",
            "stock"
          ]
        }
      }
    },
    {
      "name": "8️⃣ Eliminar Producto",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/franquicias/{{franquiciaId}}/sucursales/{{sucursalId}}/productos/{{productoId}}",
          "host": ["{{baseUrl}}"],
          "path": [
            "api",
            "franquicias",
            "{{franquiciaId}}",
            "sucursales",
            "{{sucursalId}}",
            "productos",
            "{{productoId}}"
          ]
        }
      }
    },
    {
      "name": "9️⃣ Productos con más stock por Sucursal (de una Franquicia)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/franquicias/{{franquiciaId}}/productos/top-stock",
          "host": ["{{baseUrl}}"],
          "path": ["api", "franquicias", "{{franquiciaId}}", "productos", "top-stock"]
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "franquiciaId", "value": "1" },
    { "key": "sucursalId", "value": "1" },
    { "key": "productoId", "value": "1" }
  ]
}
